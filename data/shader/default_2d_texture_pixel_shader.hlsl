//--------------------------------------------------------------------------------
//  Constant table
//--------------------------------------------------------------------------------
float4 material_diffuse;
sampler color_texture;

//--------------------------------------------------------------------------------
//  In/Out struct
//--------------------------------------------------------------------------------
struct PixelIn
{
	float2 uv : TEXCOORD0;
	float4 color : COLOR0;
};

//--------------------------------------------------------------------------------
//  Shader method
//--------------------------------------------------------------------------------
float4 main(PixelIn pixel) : COLOR0
{
	return pixel.color * material_diffuse * tex2D(color_texture, pixel.uv);
}