//--------------------------------------------------------------------------------
//  Constant table
//--------------------------------------------------------------------------------
float4 material_diffuse;

//--------------------------------------------------------------------------------
//  In/Out struct
//--------------------------------------------------------------------------------
struct PixelIn
{
	float4 color : COLOR0;
};

//--------------------------------------------------------------------------------
//  Shader method
//--------------------------------------------------------------------------------
float4 main(PixelIn pixel) : COLOR0
{
	return pixel.color * material_diffuse;
}